@using Nop.Web.Models.Catalog;
@model IList<ManufacturerModel>

    <style>
    .page.manufacturer-row-page {
        padding: 20px;
    }

    .manufacturer-row {
        display: flex;
        justify-content: space-between;
        flex-wrap: nowrap; /* No wrapping, all in a single row */
        overflow-x: auto; /* Allows horizontal scrolling if necessary */
    }

    .manufacturer-box {
        flex: 0 0 auto; /* Ensure fixed size */
        width: 120px; /* Small fixed width for each card */
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        margin-right: 15px; /* Adds space between the cards */
        background-color: #fff;
        transition: box-shadow 0.3s ease;
        text-align: center; /* Center align text */
    }

        .manufacturer-box:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .manufacturer-item {
        text-align: center;
    }

    .manufacturer-title {
        font-size: 12px; /* Smaller text for compact look */
        font-weight: bold;
        margin-top: 5px;
        margin-bottom: 5px;
    }

        .manufacturer-title a {
            text-decoration: none;
            color: #4ab2f1;
            transition: color 0.3s ease;
        }

            .manufacturer-title a:hover,
            .manufacturer-title a:focus {
                color: #248ece;
            }

    .manufacturer-picture {
        background-color: #f9f9f9;
        border-radius: 5px;
        overflow: hidden;
    }

        .manufacturer-picture img {
            width: 100%;
            height: auto; /* Ensure image scales correctly */
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

        .manufacturer-picture:hover img {
            transform: scale(1.05);
        }


    </style>
<div class="page manufacturer-row-page">
    <div class="page-title">
        <h1>@T("Manufacturers.List")</h1>
    </div>
    <div class="page-body">
        <div class="manufacturer-row">
            @foreach (var item in Model)
            {
                <div class="manufacturer-box">
                    <div class="manufacturer-item">
                        <h2 class="manufacturer-title">
                                @item.Name
                        </h2>
                        <div class="manufacturer-picture">
                                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
