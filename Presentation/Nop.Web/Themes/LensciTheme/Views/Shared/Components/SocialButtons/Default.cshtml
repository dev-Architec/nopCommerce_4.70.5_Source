@model SocialModel
<ul class="networks">
	@if (!string.IsNullOrEmpty(Model.FacebookLink))
	{
		<li class="facebook"><a href="@Model.FacebookLink" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-facebook-f"></i></a></li>
	}
	@if (!string.IsNullOrEmpty(Model.TwitterLink))
	{
		<li class="twitter"><a href="@Model.TwitterLink" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-twitter"></i></a></li>
	}
	@if (Model.NewsEnabled)
	{
		<li class="rss"><a href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})"><i class="fa-solid fa-rss"></i></a></li>
	}
	@if (!string.IsNullOrEmpty(Model.YoutubeLink))
	{
		<li class="youtube"><a href="@Model.YoutubeLink" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-youtube"></i></a></li>
	}
	@if (!string.IsNullOrEmpty(Model.InstagramLink))
	{
		<li class="instagram"><a href="@Model.InstagramLink" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-instagram"></i></a></li>
	}
</ul>