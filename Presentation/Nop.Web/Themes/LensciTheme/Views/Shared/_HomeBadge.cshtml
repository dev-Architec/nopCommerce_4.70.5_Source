<div id="badges" class="badges-container">
    <div class="badges-wrapper">
        <div class="badges_nav">
            <i class="fas fa-chevron-left arrow prev"></i>
            <i class="fas fa-chevron-right arrow next"></i>
        </div>
        <div class="badges-list">
            <div class="badge money-back">
                <div class="fancybadges" data-height="300" data-width="800" data-url="/common/popups/pop_moneyBackGuarantee.asp">
                    <i class="fas fa-dollar-sign icon" aria-hidden="true" title="Money Back Guarantee"></i>
                    <div class="badge-text">Money Back Guarantee</div>
                </div>
            </div>

            <div class="badge hassle-free-returns">
                <div class="fancybadges" data-height="375" data-width="800" data-url="/common/popups/pop_hassleFreeReturns.asp?mode=static">
                    <i class="fas fa-undo-alt icon" aria-hidden="true" title="Hassle Free Returns"></i>
                    <div class="badge-text">Hassle Free Returns</div>
                </div>
            </div>
            <div class="badge customer-service">
                <div class="fancybadges">
                    <i class="fas fa-headset icon" aria-hidden="true" title="Customer Service 24/7"></i>
                    <div class="badge-text">Customer Service 24/7 <a id="live_chat_link" href="#" title="Live Chat" class="live-chat-link">Live Chat</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var currentIndex = 0;
        var totalBadges = $('.badges-list .badge').length;

        function moveSlider(index) {
            var badgeWidth = $('.badges-list .badge').outerWidth();
            var offset = badgeWidth * index;
            $('.badges-list').css('transform', 'translateX(-' + offset + 'px)');
        }

        // Click on next arrow
        $('.badges_nav .next').on('click', function () {
            if (currentIndex < totalBadges - 1) {
                currentIndex++;
                moveSlider(currentIndex);
            }
        });

        // Click on previous arrow
        $('.badges_nav .prev').on('click', function () {
            if (currentIndex > 0) {
                currentIndex--;
                moveSlider(currentIndex);
            }
        });

        // Reset to first slide when resizing to mobile layout
        $(window).on('resize', function () {
            if ($(window).width() <= 767) {
                currentIndex = 0;
                moveSlider(currentIndex);
            }
        });
    });

</script>